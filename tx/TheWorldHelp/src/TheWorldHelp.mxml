<?xml version="1.0" encoding="utf-8"?>
<s:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009" 
					   xmlns:s="library://ns.adobe.com/flex/spark" 
					   xmlns:mx="library://ns.adobe.com/flex/mx"
					   width="1000"
					   height="600"
					   nativeDragEnter="windowedapplication1_nativeDragEnterHandler(event)"
					   nativeDragDrop="windowedapplication1_nativeDragDropHandler(event)"
					   creationComplete="windowedapplication1_creationCompleteHandler(event)">
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import com.OpenFile;
			import com.csv.CsvManager;
			import com.module.dataget.EmoteGet;
			import com.module.map.MapResourceGeter;
			import com.module.map.MapView;
			import com.theworld.utils.UILocator;
			import com.tool.NPCOnceTool;
			
			import mx.events.FlexEvent;
			protected function windowedapplication1_nativeDragEnterHandler(event:NativeDragEvent):void
			{
				// TODO Auto-generated method stub
				
				NativeDragManager.acceptDragDrop(this);
				
			}
			
			protected function windowedapplication1_nativeDragDropHandler(event:NativeDragEvent):void
			{
				// TODO Auto-generated method stub
				var clip:Clipboard = event.clipboard;
				var files:Array = clip.getData(ClipboardFormats.FILE_LIST_FORMAT) as Array;
				for each(var f:File in files){
					if(f.type==".csv"){
						CsvManager.parser(f);
						continue;
					}else if(f.name == 'npc.txt'){
						new NPCOnceTool("npc").decoder(f);
					}else if(f.name == 'item.txt'){
						new NPCOnceTool("npc").decodeItem(f);
					}else if(f.type == '.iss'){
						mapresource.updataJpgMapData(OpenFile.openAsObj(f));
					}else if(f.name == 'emote2.xml'){
						//System.useCodePage = true
						new EmoteGet().dedecoder(f,OpenFile.openAsTxt(f));
					}
				}
			}



			protected function windowedapplication1_creationCompleteHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				if(stage){
					tostage();
				}else{
					addEventListener(Event.ADDED_TO_STAGE,tostage);
				}
			}
			
			private var mapresource:MapResourceGeter;
			private var mapview:MapView;
			public function tostage(event:Event = null):void{
				removeEventListener(Event.ADDED_TO_STAGE,tostage);
				UILocator.bindContianer(stage,continer);
				//mapresource = new MapResourceGeter();
//				mapresource.create();
//				mapview = new MapView();
//				mapview.init();
			}

		]]>
	</fx:Script>
	<s:SpriteVisualElement id="continer"/>
</s:WindowedApplication>
